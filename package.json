{
  "name": "@tyroneross/navgator",
  "version": "0.2.2",
  "description": "Architecture connection tracker for Claude Code - know your stack before you change it",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "navgator": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./scanner": {
      "types": "./dist/scanner.d.ts",
      "import": "./dist/scanner.js"
    },
    "./setup": {
      "types": "./dist/setup.d.ts",
      "import": "./dist/setup.js"
    }
  },
  "files": [
    "dist",
    "web/.next/standalone",
    "web/.next/static",
    "web/public",
    "skills",
    "hooks",
    "agents",
    ".claude-plugin",
    "scripts/install-plugin.sh",
    "CLAUDE.md",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:cli && npm run build:web",
    "build:cli": "tsc && npm run build:fixshebang",
    "build:fixshebang": "node -e \"const fs=require('fs');const f='dist/cli/index.js';let c=fs.readFileSync(f,'utf8');if(!c.startsWith('#!')){c='#!/usr/bin/env node\\n'+c;fs.writeFileSync(f,c);}\"",
    "build:web": "cd web && npm run build && cd .. && npm run build:standalone",
    "build:standalone": "cp -r web/.next/static web/.next/standalone/web/.next/static && test -d web/public && cp -r web/public web/.next/standalone/web/public || true",
    "dev": "tsc --watch",
    "dev:web": "cd web && next dev",
    "start": "node dist/cli/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist web/.next",
    "prepublishOnly": "npm run clean && npm run build",
    "link:local": "npm run build && npm link",
    "install-plugin": "bash scripts/install-plugin.sh --global"
  },
  "keywords": [
    "claude-code",
    "architecture",
    "dependencies",
    "devtools",
    "cli",
    "connections",
    "impact-analysis"
  ],
  "author": "Tyrone Ross",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tyroneross/navgator"
  },
  "homepage": "https://github.com/tyroneross/navgator#readme",
  "bugs": {
    "url": "https://github.com/tyroneross/navgator/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "glob": "^13.0.0"
  },
  "optionalDependencies": {
    "ts-morph": "^27.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.3.0"
  }
}
